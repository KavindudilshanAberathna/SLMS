<div class="container">
  <h2 class="text-xl font-semibold mb-4">Enroll Optional Subjects</h2>

  <% if (success_msg) { %>
    <div class="bg-green-100 text-green-800 p-2 rounded mb-3"><%= success_msg %></div>
  <% } %>
  <% if (error_msg) { %>
    <div class="bg-red-100 text-red-800 p-2 rounded mb-3"><%= error_msg %></div>
  <% } %>

  <form action="/dashboard/student/subjects/enroll" method="POST">
    <% if (availableSubjects.length === 0) { %>
      <p>No more optional subjects available to select.</p>
    <% } else { %>
      <div class="grid grid-cols-2 gap-2">
        <% availableSubjects.forEach(subject => { %>
          <div>
            <input type="checkbox" name="selectedSubjects" value="<%= subject %>" id="<%= subject %>">
            <label for="<%= subject %>"><%= subject %></label>
          </div>
        <% }) %>
      </div>
      <button type="submit" class="mt-4 bg-blue-600 text-white px-4 py-2 rounded">Enroll</button>
    <% } %>
  </form>

  <hr class="my-6" />

  <h3 class="text-lg font-semibold">Already Enrolled Optional Subjects</h3>
  <ul class="list-disc pl-6 mt-2">
    <% enrolled.forEach(subject => { %>
      <li><%= subject %></li>
    <% }) %>
  </ul>
</div>

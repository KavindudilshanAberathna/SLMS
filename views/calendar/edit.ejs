                </li>
            </ul>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="pt-16 md:pl-60 min-h-screen">
        <div class="p-4 md:p-6 max-w-7xl mx-auto">
            <!-- Welcome Section -->
            <div class="bg-white rounded shadow-sm p-6 mb-6">
                <h2 class="text-2xl font-bold text-[#800000] mb-6 text-center">Edit Timetable Entry</h2>

<form action="/calendar/edit/<%= entry._id %>" method="POST" class="max-w-xl mx-auto bg-white p-6 rounded shadow space-y-5">

  <div>
    <label class="block mb-1 text-[#800000] font-medium">Grade:</label>
    <input 
      name="grade" 
      value="<%= entry.grade %>" 
      required 
      type="number"
      class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#800000]"
    >
  </div>

  <div id="stream-field" class="<%= (entry.grade === 12 || entry.grade === 13) ? '' : 'hidden' %>">
    <label class="block mb-1 text-[#800000] font-medium">Stream:</label>
    <input 
      name="stream" 
      value="<%= entry.stream %>" 
      type="text"
      class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#800000]"
    >
  </div>

  <div>
    <label class="block mb-1 text-[#800000] font-medium">Day:</label>
    <select 
      name="day" 
      required
      class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#800000]"
    >
      <% ["Monday","Tuesday","Wednesday","Thursday","Friday"].forEach(day => { %>
        <option value="<%= day %>" <%= entry.day === day ? "selected" : "" %>><%= day %></option>
      <% }) %>
    </select>
  </div>

  <div>
    <label class="block mb-1 text-[#800000] font-medium">Period:</label>
    <select 
      name="period" 
      required
      class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#800000]"
    >
      <% Object.keys(timeSlots).forEach(p => { %>
        <option value="<%= p %>" <%= entry.period === p ? "selected" : "" %>><%= p %> - <%= timeSlots[p] %></option>
      <% }) %>
    </select>
  </div>

  <div>
    <label class="block mb-1 text-[#800000] font-medium">Subject:</label>
    <select 
      name="subject" 
      required
      class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#800000]"
    >
      <% subjects.forEach(s => { %>
        <option value="<%= s._id %>" <%= entry.subject && entry.subject._id.toString() === s._id.toString() ? "selected" : "" %>>
          <%= s.name %>
        </option>
      <% }) %>
    </select>
  </div>

  <div>
    <label class="block mb-1 text-[#800000] font-medium">Teacher:</label>
    <select 
      name="teacher" 
      required
      class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#800000]"
    >
      <% teachers.forEach(t => { %>
        <option value="<%= t._id %>" <%= entry.teacher && entry.teacher._id.toString() === t._id.toString() ? "selected" : "" %>>
          <%= t.fullName %>
        </option>
      <% }) %>
    </select>
  </div>

  <div class="text-center">
    <button type="submit" 
            class="bg-[#800000] text-white px-6 py-2 rounded hover:bg-[#990000] transition duration-200">
      Update
    </button>
  </div>
</form>


            </div>
        </div>
    </main>
    <script>
  function toggleStreamField() {
    const gradeInput = document.querySelector('input[name="grade"]');
    const streamField = document.getElementById('stream-field');
    const grade = parseInt(gradeInput.value);
    if (grade === 12 || grade === 13) {
      streamField.classList.remove('hidden');
    } else {
      streamField.classList.add('hidden');
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const gradeInput = document.querySelector('input[name="grade"]');
    gradeInput.addEventListener('input', toggleStreamField);
    toggleStreamField();
  });
</script>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>Assign Subject</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white text-[#800000]">
  <div class="max-w-3xl mx-auto p-6">
    <h2 class="text-2xl font-bold mb-4">Assign "<%= subject %>" to Teachers</h2>

    <form action="/dashboard/admin/subjects/add-assignment/<%= subject %>" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1 font-medium">Grade</label>
        <select name="grade" required class="w-full border border-gray-300 p-2 rounded">
          <% for (let g = 6; g <= 13; g++) { %>
            <option value="<%= g %>">Grade <%= g %></option>
          <% } %>
        </select>
      </div>

      <div>
        <label class="block mb-1 font-medium">Select Teachers</label>
        <div class="grid grid-cols-2 gap-2 max-h-64 overflow-y-auto border border-gray-200 p-3 rounded">
          <% teachers.forEach(teacher => { %>
            <label class="flex items-center space-x-2">
              <input type="checkbox" name="teacherIds" value="<%= teacher._id %>" />
              <span><%= teacher.fullName %> (<%= teacher.email %>)</span>
            </label>
          <% }) %>
        </div>
      </div>

      <button type="submit" class="bg-[#800000] text-white px-4 py-2 rounded hover:bg-[#660000]">Assign</button>
    </form>
  </div>
</body>
</html>

            </ul>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="pt-16 md:pl-60 min-h-screen">
        <div class="p-4 md:p-6 max-w-7xl mx-auto">
              <div class="max-w-6xl mx-auto mt-8 px-4">
  <h2 class="text-3xl font-bold mb-6 text-[#800000]">All Students' Grades</h2>

  <% if (groupedGrades.length === 0) { %>
    <p class="text-gray-600">No grades found.</p>
  <% } else { %>
    <% groupedGrades.forEach(group => { %>
      <section class="mb-10">
        <h3 class="text-xl font-semibold mb-4 border-b border-gray-300 pb-2 text-[#800000]"><%= group.grade %> - <%= group.subject %></h3>

        <div class="overflow-x-auto">
          <table class="min-w-full border border-gray-300 rounded-lg">
            <thead class="bg-gray-100">
              <tr>
                <th class="px-4 py-2 border-b border-gray-300 text-left text-sm font-medium text-gray-700">Student</th>
                <th class="px-4 py-2 border-b border-gray-300 text-left text-sm font-medium text-gray-700">Term</th>
                <th class="px-4 py-2 border-b border-gray-300 text-right text-sm font-medium text-gray-700">Score</th>
                <th class="px-4 py-2 border-b border-gray-300 text-right text-sm font-medium text-gray-700">Max Score</th>
                <th class="px-4 py-2 border-b border-gray-300 text-right text-sm font-medium text-gray-700">Percentage</th>
                <th class="px-4 py-2 border-b border-gray-300 text-left text-sm font-medium text-gray-700">Date</th>
                <th class="px-4 py-2 border-b border-gray-300 text-center text-sm font-medium text-gray-700">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% group.grades.forEach(g => { %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-2 border-b border-gray-300 text-gray-800"><%= g.student?.fullName || 'N/A' %></td>
                  <td class="px-4 py-2 border-b border-gray-300 text-gray-800"><%= g.term %></td>
                  <td class="px-4 py-2 border-b border-gray-300 text-right text-gray-800"><%= g.score %></td>
                  <td class="px-4 py-2 border-b border-gray-300 text-right text-gray-800"><%= g.maxScore %></td>
                  <td class="px-4 py-2 border-b border-gray-300 text-right text-gray-800"><%= ((g.score / g.maxScore) * 100).toFixed(2) %>%</td>
                  <td class="px-4 py-2 border-b border-gray-300 text-gray-800"><%= g.createdAt ? g.createdAt.toDateString() : 'N/A' %></td>
                  <td class="px-4 py-2 border-b border-gray-300 text-center">
                    <a href="/grades/edit/<%= g._id %>" class="text-yellow-600 hover:text-yellow-800 mr-3 font-semibold">Edit</a>

                    <form action="/grades/delete/<%= g._id %>" method="POST" class="inline" onsubmit="return confirmDelete(event)">
                      <button type="submit" class="text-red-600 hover:text-red-800 font-semibold">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
    <% }) %>
  <% } %>
</div>

<script>
  function confirmDelete(e) {
    return confirm('Are you sure you want to delete this grade?');
  }
</script>

          </div>
          </main>
          </body>
          </html>
